{
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "2GB",
  "requiresCompatibilities": ["FARGATE"],
  "family": "worker",
  "taskRoleArn": "<%= @WORKER_ROLE_ARN%>",
  "executionRoleArn": "<%= @EXECUTION_ROLE_ARN%>",
  "containerDefinitions": [
    {
      "name": "worker",
      "image": "<%=@WORKER_REGISTRY_URI%>:latest",
      "essential": true,
      "environment": [
        {
          "name": "JOB_QUEUE_URL",
          "value": "<%= @JOB_QUEUE_URL%>"
        },
        {
          "name": "MONGO_URL",
          "value": "<%= @MONGO_URL%>"
        },
        {
          "name": "MONGO_DB_NAME",
          "value": "alfalfa"
        },
        {
          "name": "LOGLEVEL",
          "value": "ERROR"
        },
        {
          "name": "S3_URL",
          "value": "https://s3.amazonaws.com"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "awslogs-worker",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "alfalfa"
        }
      }
    }
  ]
}
